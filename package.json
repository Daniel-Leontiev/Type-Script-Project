{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "build": "tsc --project ./tsconfig.tsc.json",
    "build-w": "tsc --project ./tsconfig.tsc.json --watch",
    "ncc": "ncc build -s --no-source-map-register ./src/main.ts -o ./build/",
    "ncc-w": "ncc build -w -s --no-source-map-register ./src/main.ts -o ./build/",
    "webpack": "webpack --mode=development",
    "webpack-w": "webpack --mode=development --watch",
    "run": "node ./build/index.js",
    "run-html": "open-cli ./public/index.html",
    "serve": "serve ./public"
  },
  "dependencies": {
    "@packages/utils": "*"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.34.0",
    "open-cli": "^7.0.1",
    "serve": "^14.0.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  }
}